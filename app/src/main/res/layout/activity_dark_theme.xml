<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_dayNight"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_dark_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >

        <RadioButton
            android:id="@+id/rb_system_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:padding="5dp"
            android:text="@string/system_mode"
            android:textColor="@color/text_color_dayNight" />

        <RadioButton
            android:id="@+id/rb_light_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/light_mode"
            android:textColor="@color/text_color_dayNight" />

        <RadioButton
            android:id="@+id/rb_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/dark_mode"
            android:textColor="@color/text_color_dayNight" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_android"
        android:backgroundTint="@color/icon_color"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/the_night_has_fallen"
        android:textColor="@color/magic_text_color"
        android:textAlignment="center"/>

</LinearLayout>